# example configuration for nursd. run at this dir as
# NURS_PYSON=@cwd@/consumer_py.json ../../src/nursd nursd.conf

[global]

# plugin:
# 1. load the plugins _first_ from the global section
# 2. options for each plugin in seperate section below
plugin	= "@pkglibdir@/nurs_producer_TICK.so"
plugin	= "@pkglibdir@/nurs_PYTHON.so"
plugin	= "@cwd@/producer.gso"
plugin	= "@cwd@/consumer.gso"

# stack
# each element represented id:name, separated by ,
stack	= "tick:TICK, py_consumer1:PY_TICK_CONSUMER"
stack	= "tick:TICK, py_consumer2:PY_TICK_CONSUMER"
stack	= "tick:TICK, go_consumer:GO_TICK_CONSUMER"
stack	= "tickgo:GO_TICK_PRODUCER, go_consumer:GO_TICK_CONSUMER"
stack	= "tickgo:GO_TICK_PRODUCER, py_consumer2:PY_TICK_CONSUMER"

# number of workers
workers	= 8

# number of iosets per stack
iosets	= 8

# each pluginstance settings

[tick]
myname = "C producer"

[py_consumer1]
path = "@cwd@"
module = "consumer"
myname = "Python consumer x 1"

[py_consumer2]
path = "@cwd@"
module = "consumer2"
myname = "Python consumer x 2"

[tickgo]
myname = "Go producer"

[go_consumer]
myname = "Go consumer"
